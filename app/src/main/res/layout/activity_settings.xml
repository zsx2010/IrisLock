<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line">

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/colorIngigo"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_left_white_18dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_title"
                android:text="@string/settings"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/addUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/add_user"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:visibility="invisible"
                android:clickable="false"/>
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite">
            <RelativeLayout
                android:id="@+id/wifiSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/left_margin"
                android:background="@color/colorWhite">
                <ImageView
                    android:id="@+id/wifiIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_wifi"
                    />
                <TextView
                    android:layout_toRightOf="@+id/wifiIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIngigo"
                    android:textSize="@dimen/text_size_standard"
                    android:text="@string/networkConnection"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/wifiArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_right"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <ListView
                android:id="@+id/WiFiList"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/wifiSetting"
                android:visibility="gone">

            </ListView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/line"/>

        <RelativeLayout
            android:id="@+id/passwordSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/left_margin"
            android:background="@color/colorWhite">
            <ImageView
                android:id="@+id/passwordIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_password"
                />
            <TextView
                android:layout_toRightOf="@+id/passwordIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:text="@string/passwordSetting"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"
                android:scaleType="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/line"/>


        <RelativeLayout
            android:id="@+id/soundSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/left_margin"
            android:background="@color/colorWhite">
            <ImageView
                android:id="@+id/soundIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sound"
                />
            <TextView
                android:layout_toRightOf="@+id/soundIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:text="@string/soundSetting"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"
                android:scaleType="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/line"/>

        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/left_margin"
            android:background="@color/colorWhite">
            <ImageView
                android:id="@+id/aboutIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_about"
                />
            <TextView
                android:layout_toRightOf="@+id/aboutIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIngigo"
                android:textSize="@dimen/text_size_standard"
                android:text="@string/about"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"
                android:scaleType="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_shadow"
        android:visibility="gone"/>

</FrameLayout>
