<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/colorGray">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorIngigo"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_left_white_18dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_title"
            android:text="@string/adminInfo"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/addUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_user"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorGray"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/colorIngigo"
                    android:textSize="@dimen/text_size_standard"
                    android:text="@string/newUserInfoTemp"/>

                <RadioGroup
                    android:id="@+id/chooseSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    >
                    <RadioButton
                        android:id="@+id/maleRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/sex_radio_bg"
                        android:layout_gravity="left"
                        android:checked="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textSize="@dimen/text_size_standard"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorIngigo"/>
                    <RadioButton
                        android:id="@+id/femaleRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/sex_radio_bg"
                        android:layout_marginLeft="90dp"
                        android:gravity="right"
                        android:checked="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textSize="@dimen/text_size_standard"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorIngigo"/>
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp">
                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_standard"
                        android:text="@string/name"
                        />

                    <EditText
                        android:id="@+id/nameEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_standard"
                        android:singleLine="true"
                        android:textColor="@color/colorEditText"
                        android:background="@null"
                        />
                    <CheckBox
                        android:id="@+id/nameCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:button="@drawable/checkbox_bg"
                        android:clickable="false"/>
                </LinearLayout>
                <View
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorText"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

                <LinearLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_below="@+id/line1"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    >
                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_standard"
                        android:text="@string/phone"
                        />

                    <EditText
                        android:id="@+id/phoneEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_standard"
                        android:singleLine="true"
                        android:textColor="@color/colorEditText"
                        android:background="@null"
                        />
                    <CheckBox
                        android:id="@+id/phoneCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:button="@drawable/checkbox_bg"
                        android:clickable="false"/>
                </LinearLayout>
                <View
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorText"
                    android:layout_below="@+id/phoneLayout"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_standard"
                    android:text="@string/idValidityTime"
                    android:gravity="center"
                    android:textColor="@color/colorIngigo"
                    android:layout_marginTop="50dp"
                    />
                <LinearLayout
                    android:id="@+id/chooseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="5dp"  >
                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yearMonthDay"
                        android:textSize="@dimen/text_size_standard"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/zhi"
                        android:textColor="@color/colorIngigo"
                        android:textSize="@dimen/text_size_standard"/>
                    <TextView
                        android:id="@+id/stopDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yearMonthDay"
                        android:textSize="@dimen/text_size_standard"/>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorText"
                    android:id="@+id/line4"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"/>

                <RelativeLayout
                    android:id="@+id/validityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    >
                    <TextView
                        android:id="@+id/validityTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorIngigo"
                        android:textSize="@dimen/text_size_standard"
                        android:text="@string/idValidityLength"
                        android:layout_centerVertical="true"
                        />

                    <LinearLayout
                        android:id="@+id/chooseTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/startTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_clock"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="@dimen/text_size_standard"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/zhi"
                            android:textColor="@color/colorIngigo"
                            android:textSize="@dimen/text_size_standard"/>
                        <TextView
                            android:id="@+id/stopTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/zero_clock"
                            android:textSize="@dimen/text_size_standard"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/line3"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorText"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"/>

                <LinearLayout
                    android:id="@+id/validityTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <CheckBox
                            android:id="@+id/monCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/mon"
                            android:textColor="@color/colorIngigo"/>
                        <CheckBox
                            android:id="@+id/tusCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/tus"
                            android:textColor="@color/colorIngigo"/>
                        <CheckBox
                            android:id="@+id/wedCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/wed"
                            android:textColor="@color/colorIngigo"/>
                        <CheckBox
                            android:id="@+id/thuCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/thu"
                            android:textColor="@color/colorIngigo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <CheckBox
                            android:id="@+id/friCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/fri"
                            android:textColor="@color/colorIngigo"/>
                        <CheckBox
                            android:id="@+id/satCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/sat"
                            android:textColor="@color/colorIngigo"/>
                        <CheckBox
                            android:id="@+id/sunCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:button="@drawable/checkbox_bg"
                            android:text="@string/sun"
                            android:textColor="@color/colorIngigo"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:button="@drawable/checkbox_bg"
                            android:clickable="false"
                            android:text="@string/thu"
                            android:textColor="@color/colorIngigo"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <!--<TextView-->
                        <!--android:id="@+id/validityTimeText"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/Red"-->
                        <!--android:textSize="@dimen/text_size_standard"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:text="@string/admin"-->
                        <!--/>-->

                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/register"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:enabled="false"
                android:background="@drawable/bg_button_register"
                android:text="@string/assuredAdd"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="40dp"/>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>